---
const {title} = Astro.props;
---
<header class="page page-header">
  <h1 class="heroTitle">{title}</h1>
</header>

<style>
  header{
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    padding-block: 4rem 0;
    min-height:20rem;
    height:30vh;
    margin-block: 0;
  }
  .heroTitle {
    font-size: var(--fs-6);
    font-weight: 400;
    letter-spacing: -0.0125em;
    line-height: 112.5%;
    margin-bottom: 1rem;
  }
</style>