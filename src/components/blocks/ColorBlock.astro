---
import { cleanSize } from '../../lib/stega-clean';

// Define Types
interface Props {
  color?: string;
  size?: 'inline' | 'popout' | 'feature' | 'full' | 'inherit';
}

// Define Vars
const { color = '#000000' } = Astro.props;
const size = cleanSize(Astro.props.size);
---

<div class:list={['colorblock', size]} style={`background-color: ${color};`}>
  <div class="colorblock-content"></div>
</div>

<style>
  .colorblock {
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .colorblock-content {
    width: 100%;
    height: 100%;
  }

  /* Size-based grid positioning */
  .colorblock.content {
    grid-column: content;
  }

  .colorblock.popout {
    grid-column: popout;
  }

  .colorblock.feature {
    grid-column: feature;
  }

  .colorblock.full {
    grid-column: full;
  }

  .colorblock.inline {
    grid-column: content;
  }

  .colorblock.inherit {
    grid-column: inherit;
  }
</style>
